line-clamping(
    $lines-count = 1, 
    $font-size = 16px,
    $line-height = 1.25, 
    $is-inline = false
)
    $display = $is-inline ? inline-block : block
    $display-webkit = $is-inline ? -webkit-inline-box : -webkit-box
    $max-height = $lines-count * ($line-height * $font-size)

    display $display
    max-height $max-height
    overflow hidden

    @supports (display $display-webkit) and (-webkit-line-clamp $lines-count)
        display $display-webkit
        -webkit-box-orient vertical
        -webkit-line-clamp $lines-count