// @describe line-clamping()
 
// @it should keep visible only two lines of text using unitless `line-height` property
.test
    line-clamping({
        lines: 2,
        line-height: 1.25,
        font-size: 20px,
    })
 
// @expect
.test {
    display: block;
    max-height: 50px;
    overflow: hidden;
    font-size: 20px;
    line-height: 1.25;
}
@supports (display: -webkit-box) and (-webkit-line-clamp: 2) {
    .test {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
}

